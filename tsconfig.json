{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2022"], 
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
  },
  "exclude": [
    "node_modules",
    "bin"
  ],
  "include":[
    "src/**/*.ts"
  ]
}